{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", "tab"],
        "quotes": ["error", "single"],
        "max-len": ["error", {"code": 80}],
        "object-curly-spacing": ["error", "always"],
        "array-bracket-spacing": ["error", "always"]

    }
}
